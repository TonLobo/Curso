@model IEnumerable<CadProdutos.Models.Produto>

@{
	ViewData["Title"] = "Index";
	var totalPreco = Model.Sum(m => m.Preco);
}

<h1>Index</h1>

<p>
	<a asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-file-plus"></i>Novo Produto</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Url)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Informacoes)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Fabricante)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Preco)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<img src="@Url.Content("~/img/" + @item.Url)" alt="@item.Url" height="100px" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Informacoes)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Fabricante)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Preco)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i>Editar</a> |
					<a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-info"><i class="bi bi-file-text"></i>Detahes</a> |
					<a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-danger"><i class="bi bi-trash3"></i>Excluir</a>
				</td>
			</tr>
		}
	</tbody>
	<tfoot>
		<tr>
			<td>
				<strong>Preço Total:</strong> @totalPreco.ToString()
			</td>
		</tr>

	</tfoot>
</table>
