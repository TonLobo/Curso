@model IEnumerable<PrimeiroProjeto.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary"><i class="bi bi-plus-circle-fill"></i>Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-sm btn-primary"><i class="bi bi-pencil-fill"></i>Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-sm btn-info"><i class="bi bi-file-text-fill"></i>Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-sm btn-danger"> <i class="bi bi-trash3"></i> Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
