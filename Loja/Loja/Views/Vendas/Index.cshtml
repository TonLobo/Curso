<div class="card">
    <div class="card-header">Dados da Venda</div>
</div>

<br />

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Carro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAVista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parcelas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorJuros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BancoFinanciamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComissaoVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEntrega)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Carro.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAVista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parcelas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorJuros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BancoFinanciamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComissaoVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrega)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VendaId" class="btn btn-sm btn-primary"> <i class="bi bi-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.VendaId" class="btn btn-sm btn-info"> <i class="bi bi-journal-text"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.VendaId" class="btn btn-sm btn-danger"> <i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        var table = new DataTable('#myTable',
            {
                language:
                {
                    url: '//cdn.datatables.net/plug-ins/2.0.8/i18n/pt-BR.json',
                },
            });
    </script>
}