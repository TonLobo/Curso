@model List<Cliente>

<h1>Listagem de Clientes</h1></>
<a asp-action="Create" class="btn btn-primary">Adicionar Novo Cliente</a>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome Cliente</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var cliente in Model)
        {

            <tr>
                <td>@cliente.ClienteId</td>
                <td>@cliente.NomeCliente</td>
                <td>@cliente.Email</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@cliente.ClienteId" class="btn btn-sm btn-warning"> <i class="bi bi-file-text"></i> Detalhes</a>
                    <a asp-action="Editar" asp-route-id="@cliente.ClienteId" class="btn btn-sm btn-primary"> <i class="bi bi-pencil-square"></i> Editar</a>
                    <a asp-action="Excluir" asp-route-id="@cliente.ClienteId" class="btn btn-sm btn-danger"> <i class="bi bi-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>


</table>