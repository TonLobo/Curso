@model List<Produto>

<h1>Listagem de Produtos</h1></>
<a asp-action="Create" class="btn btn-primary">Adicionar Novo Produto</a>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome Produto</th>
            <th>Marca</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var produto in Model)
        {

            <tr>
                <td>@produto.ProdutoId</td>
                <td>@produto.NomeProduto</td>
                <td>@produto.Marca</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@produto.ProdutoId" class="btn btn-sm btn-info"> <i class="bi bi-journal-text"></i> Detalhes</a>
                    <a asp-action="Editar" asp-route-id="@produto.NomeProduto" class="btn btn-sm btn-primary"> <i class="bi bi-pencil"></i> Editar</a>
                    <a asp-action="Excluir" asp-route-id="@produto.Marca" class="btn btn-sm btn-danger"> <i class="bi bi-trash3"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>


</table>